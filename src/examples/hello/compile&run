cd src/
javac  -d  /Library/WebServer/Documents/classes/ examples/hello/*.java
rm examples/hello/*.class
javac -d ./ examples/hello/*.java examples/hello/HelloApplet.java
rmic  -d  /Library/WebServer/Documents/classes/ examples.hello.HelloImpl
cp examples/hello/hello.html /Library/WebServer/Documents/
cp examples/hello/hello_applet.jnlp /Library/WebServer/Documents/
#rmiregistry &
java  -Djava.rmi.server.codebase=http://localhost/classes/  -Djava.security.policy=examples/hello/policy  examples.hello.HelloImpl

jar cvf /Library/WebServer/Documents/hello_applet.jar examples/hello/*.class
jarsigner /Library/WebServer/Documents/hello_applet.jar applet
