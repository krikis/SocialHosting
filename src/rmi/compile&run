# compile

javac rmi/compute/Compute.java rmi/compute/Task.java
jar cvf ./compute.jar rmi/compute/*.class

javac -cp ./compute.jar rmi/engine/ComputeEngine.java

# client
javac -cp ./compute.jar rmi/client/ComputePi.java rmi/client/Pi.java
cp rmi/client/Pi.class .

# run

# server
java -cp ./:./compute.jar -Djava.rmi.server.codebase=http://localhost/classes/compute.jar     -Djava.rmi.server.hostname=localhost -Djava.security.policy=server.policy rmi.engine.ComputeEngine

# client
java -cp ./:./compute.jar -Djava.rmi.server.codebase=http://localhost/classes/  -Djava.security.policy=client.policy rmi.client.ComputePi localhost 45
