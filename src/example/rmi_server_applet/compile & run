# create certificate
keytool -genkey -alias applet
keytool -selfcert -alias applet

# run rmiregistry
rmiregistry &

# run rmi server
cd src/
javac  -d ../www/classes/  example/rmi_server_applet/*.java
javac  -d ./  example/rmi_server_applet/*.java
cd ../www/classes/
rmic -d ./ example.rmi_server_applet.HelloImpl
jar cvf ../HelloApplet.jar example/rmi_server_applet/*.class
cd ../
jarsigner ./HelloApplet.jar applet
cd ../src
java  -Djava.rmi.server.codebase=http://localhost:4444/HelloApplet.jar  -Djava.security.policy=example/rmi_server_applet/policy  example.rmi_server_applet.HelloImpl

javac  -d /Library/Webserver/Documents/classes/  example/rmi_server_applet/*.java
cd /Library/Webserver/Documents/classes/
rmic -d ./ example.rmi_server_applet.HelloImpl
social_hosting
cd src/
javac  -d ./  example/rmi_server_applet/*.java
java  -Djava.rmi.server.codebase=http://localhost:4444/classes/  -Djava.security.policy=example/rmi_server_applet/policy  example.rmi_server_applet.HelloImpl


# compile applet
javac -d /Library/WebServer/Documents/classes/ rmiapplet/*.java
# stub in classes directory
rmic -d ./ rmiapplet.HelloImpl

# jar and sign applet
jar cvf ./HelloApplet.jar rmiapplet/*.class
jarsigner HelloApplet.jar applet
